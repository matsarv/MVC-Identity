@model IdentityRole

<li class="row pyjamas">
    <div class="col-md-4 col-centered">@Model.Id</div>
    <div class="col-md-4 col-centered">@Model.Name</div>
    <div class="col-md-4">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-sm btn-danger m-1">Edit</a>
        <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-sm btn-danger m-1">Details</a>
        <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-sm btn-danger m-1">Delete</a>
        <a asp-action="AddUserToRole" asp-route-role="@Model.Name" class="btn btn-sm btn-primary m-1">Add User</a>

    </div>
</li>

