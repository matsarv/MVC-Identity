@model List<IdentityRole>
    @{
    ViewData["Title"] = "Manage Roles";
    }

    <h1>Manage Identity Roles</h1>

    <h4>People</h4>
    <hr />

    <a asp-controller="RolesAdmin" asp-action="Create" class="btn btn-sm btn-primary">Create Role</a>
    <br /><br />

    <div class="list-container">
        <ul>
            <li class="row">
                <div class="col-md-4 col-centered">Token</div>
                <div class="col-md-4 col-centered">Role</div>
                <div class="col-md-4 col-centered">Options</div>
            </li>
            @foreach (var item in Model)

        {
            @await Html.PartialAsync("_Role", item)
        }
        </ul>
    </div>
