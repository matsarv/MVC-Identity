@model City
@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>City</h4>
<hr />
@if (User.IsInRole("Admin"))
{


    <div class="row">
        <div class="col-md-4">
            @*Add post*@
            <form asp-action="Edit" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                @*Add hidden*@
                <input type="hidden" asp-for="Id" class="form-control" />
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" autofocus="autofocus" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Population" class="control-label"></label>
                    <input asp-for="Population" class="form-control" />
                    <span asp-validation-for="Population" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-sm btn-success" />
                </div>
            </form>
        </div>
    </div>

}

<div>
    <a asp-controller="Country" asp-action="Index">Back to List</a> |
    <a asp-controller="City" asp-action="Details" asp-route-id="@Model.Id">Back to Details</a>
</div>


