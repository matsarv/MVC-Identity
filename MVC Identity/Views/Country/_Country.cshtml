@model Country
@*@model CountryCitiesViewModel*@

<li class="row pyjamas">
    <div class="col-md-4 col-vcentered">@Model.Name</div>
    <div class="col-md-4 col-vcentered">
        <img src="~/img/@Model.Name-icon.png" />
    </div>

    <div class="col-md-4 col-vcentered-flag">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-sm btn-primary m-1">Edit</a>
        <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-sm btn-primary m-1">Details</a>
        <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-sm btn-primary m-1">Delete</a>
    </div>
</li>